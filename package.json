{
  "name": "caian.org",
  "version": "1.0.0",
  "description": "personal website, blog et cetera",
  "main": "index.js",
  "homepage": "https://github.com/caian-org/caian.org#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caian-org/caian.org.git"
  },
  "author": "Caian R. Ertl <hi@caian.org>",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/caian-org/caian.org/issues"
  },
  "scripts": {
    "init": "mkdir -p vendor && bundle install --path vendor && npm install && husky install",
    "build": "JEKYLL_ENV=production gulp",
    "serve": "nodemon",
    "clean": "gulp clean:dist && gulp clean:files",
    "bump:dev": "ncu --upgrade --dep dev --target minor",
    "bump:prod": "ncu --upgrade --dep prod --target minor",
    "bump:all": "npm run bump:dev && npm run bump:prod && bundle update",
    "check:lint": "eslint --format=codeframe '**/*.js'",
    "check:style": "standard",
    "check:duplicated": "jscpd",
    "check:all": "npm run check:lint && npm run check:style && npm run check:duplicated",
    "fix:style": "prettier --ignore-path .gitignore --write . '**/*.{js,yaml,yml,pug,md,json}' && standard --fix '**/*.js'"
  },
  "eslintIgnore": [
    "dist",
    "vendor",
    "report",
    "node_modules"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none"
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console"
    ],
    "absolute": true,
    "ignore": [
      "**/dist/**",
      "**/vendor/**",
      "**/report/**",
      "**/node_modules/**",
      "**/www/files/**",
      "**/*.svg"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "www"
    ],
    "ignore": [
      "dist/",
      "vendor/",
      "report/",
      "node_modules/",
      "www/files/"
    ],
    "ext": "*",
    "exec": "gulp prepare && JEKYLL_ENV=production bundle exec jekyll serve"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.40.0",
    "@aws-sdk/credential-providers": "^3.40.0",
    "@aws-sdk/signature-v4-crt": "^3.40.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@jscpd/finder": "^3.3.26",
    "@prettier/plugin-pug": "^1.17.1",
    "@types/ejs": "^3.1.0",
    "@types/gulp": "^4.0.9",
    "@types/lodash": "^4.14.176",
    "@types/luxon": "^2.0.5",
    "@types/node": "^16.11.6",
    "del": "^6.0.0",
    "ejs": "^3.1.6",
    "eslint": "^8.2.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-flatmap": "^1.0.2",
    "gulp-header": "^2.0.9",
    "gulp-pug": "^5.0.0",
    "gulp-tap": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "husky": "^7.0.4",
    "jscpd": "^3.3.26",
    "lodash": "^4.17.21",
    "luxon": "^2.0.2",
    "merge-stream": "^2.0.0",
    "nodemon": "^2.0.14",
    "npm-check-updates": "^12.0.0",
    "prettier": "^2.4.1",
    "readable-stream": "^3.6.0",
    "standard": "^16.0.4",
    "svgo": "^2.8.0"
  }
}
