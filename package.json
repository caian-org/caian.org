{
  "name": "caian.org",
  "version": "1.0.0",
  "description": "personal website, blog et cetera",
  "main": "index.js",
  "homepage": "https://github.com/caian-org/caian.org#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caian-org/caian.org.git"
  },
  "author": "Caian R. Ertl <hi@caian.org>",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/caian-org/caian.org/issues"
  },
  "scripts": {
    "init": "mkdir -p vendor && bundle install --path vendor && npm install && husky install",
    "build": "JEKYLL_ENV=production gulp",
    "watch": "nodemon",
    "bump:dev": "ncu --upgrade --dep dev --target minor",
    "bump:prod": "ncu --upgrade --dep prod --target minor",
    "bump:all": "npm run bump:dev && npm run bump:prod && bundle update",
    "check:lint": "eslint --format=codeframe '**/*.js'",
    "check:style": "standard",
    "check:duplicated": "jscpd",
    "check:all": "npm run check:lint && npm run check:style && npm run check:duplicated",
    "fix:style": "prettier --ignore-path .gitignore --print-width 100 --trailing-comma none --no-semi --single-quote --write . && standard --fix '**/*.js'"
  },
  "eslintIgnore": [
    "dist",
    "vendor",
    "report",
    "node_modules"
  ],
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console"
    ],
    "absolute": true,
    "gitignore": true,
    "ignore": [
      "dist/**",
      "vendor/**",
      "report/**",
      "node_modules/**",
      "**/*.svg"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist",
      "vendor",
      "report",
      "node_modules"
    ],
    "watch": [
      "www"
    ],
    "ext": "*",
    "exec": "gulp prepare && bundle exec jekyll serve"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.39.0",
    "@aws-sdk/credential-providers": "^3.39.0",
    "@prettier/plugin-pug": "^1.17.1",
    "@types/ejs": "^3.1.0",
    "@types/gulp": "^4.0.9",
    "@types/lodash": "^4.14.176",
    "@types/luxon": "^2.0.5",
    "@types/node": "^16.11.6",
    "del": "^6.0.0",
    "ejs": "^3.1.6",
    "gulp": "^4.0.2",
    "gulp-flatmap": "^1.0.2",
    "gulp-header": "^2.0.9",
    "gulp-pug": "^5.0.0",
    "husky": "^7.0.4",
    "jscpd": "^3.3.26",
    "lodash": "^4.17.21",
    "luxon": "^2.0.2",
    "nodemon": "^2.0.14",
    "npm-check-updates": "^11.8.5",
    "prettier": "^2.4.1",
    "standard": "^16.0.4"
  }
}
