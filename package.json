{
  "name": "caian.org",
  "version": "1.0.0",
  "description": "personal website, blog et cetera",
  "main": "index.js",
  "homepage": "https://github.com/caian-org/caian.org#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caian-org/caian.org.git"
  },
  "author": "Caian R. Ertl <hi@caian.org>",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/caian-org/caian.org/issues"
  },
  "scripts": {
    "init": "mkdir -p vendor && bundle config set --local path vendor && bundle install && npm install && husky install",
    "gulp": "gulp --gulpfile build/gulpfile.ts",
    "clean:all": "npm run gulp clean:all",
    "build": "npm run gulp build",
    "serve": "nodemon",
    "bump:dev": "ncu --upgrade --dep dev --target minor",
    "bump:prod": "ncu --upgrade --dep prod --target minor",
    "bump:all": "npm run bump:dev && npm run bump:prod && bundle update",
    "check:lint": "eslint --format=codeframe '**/*.ts'",
    "check:style": "standardx",
    "check:duplicated": "jscpd",
    "check:all": "npm run check:lint && npm run check:style && npm run check:duplicated",
    "fix:style": "prettier --ignore-path .gitignore --write . '**/*.{ts,yaml,yml,pug,md,json}' && standardx --fix '**/*.ts'"
  },
  "eslintIgnore": [
    "dist",
    "vendor",
    "report",
    "node_modules",
    "www/assets/js"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none"
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console"
    ],
    "absolute": true,
    "ignore": [
      "**/dist/**",
      "**/vendor/**",
      "**/report/**",
      "**/node_modules/**",
      "**/www/files/**",
      "**/*.svg"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "www"
    ],
    "ignore": [
      "dist/",
      "vendor/",
      "report/",
      "node_modules/",
      "www/files/"
    ],
    "ext": "*",
    "exec": "npm run build && bundle exec jekyll serve"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.44.0",
    "@aws-sdk/credential-providers": "^3.43.0",
    "@aws-sdk/signature-v4-crt": "^3.41.0",
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@jscpd/finder": "^3.4.1",
    "@prettier/plugin-pug": "^1.19.0",
    "@types/fancy-log": "^1.3.1",
    "@types/gulp": "^4.0.9",
    "@types/gulp-babel": "^6.1.30",
    "@types/gulp-header": "^2.0.1",
    "@types/gulp-postcss": "^8.0.1",
    "@types/gulp-tap": "^1.0.0",
    "@types/gulp-uglify": "^3.0.7",
    "@types/lodash": "^4.14.178",
    "@types/luxon": "^2.0.8",
    "@types/merge-stream": "^1.1.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^16.11.13",
    "@types/pug": "^2.0.5",
    "@types/readable-stream": "^2.3.12",
    "@types/vinyl": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.0",
    "chalk": "^4.1.2",
    "del": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-jsx": "^10.0.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-react": "^7.27.1",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-flatmap": "^1.0.2",
    "gulp-header": "^2.0.9",
    "gulp-postcss": "^9.0.1",
    "gulp-pug": "^5.0.0",
    "gulp-tap": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "husky": "^7.0.4",
    "jscpd": "^3.4.2",
    "lodash": "^4.17.21",
    "luxon": "^2.2.0",
    "merge-stream": "^2.0.0",
    "mustache": "^4.2.0",
    "nodemon": "^2.0.15",
    "npm-check-updates": "^12.0.3",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "readable-stream": "^3.6.0",
    "slugify": "^1.6.3",
    "standardx": "^7.0.0",
    "svgo": "^2.8.0",
    "ts-jest": "^27.1.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "vinyl": "^2.2.1",
    "yaml": "^1.10.2"
  }
}
