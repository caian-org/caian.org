{
  "name": "caian.org",
  "version": "1.0.0",
  "description": "personal website, blog et cetera",
  "main": "index.js",
  "homepage": "https://github.com/caian-org/caian.org#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caian-org/caian.org.git"
  },
  "author": "Caian R. Ertl <hi@caian.org>",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/caian-org/caian.org/issues"
  },
  "scripts": {
    "init": "mkdir -p vendor && bundle config set --local path vendor && bundle install && npm install && husky install",
    "gulp": "gulp --gulpfile build/gulpfile.ts",
    "autoindex": "NO_GULP=1 ts-node build/autoindex.ts",
    "clean:all": "npm run gulp clean:all",
    "build": "npm run gulp build",
    "serve": "nodemon",
    "bump:dev": "ncu --upgrade --dep dev --target minor",
    "bump:prod": "ncu --upgrade --dep prod --target minor",
    "bump:all": "npm run bump:dev && npm run bump:prod && bundle update",
    "check:style": "ts-standard",
    "check:duplicated": "jscpd",
    "check:all": "npm run check:style && npm run check:duplicated",
    "fix:style": "prettier --ignore-path .gitignore --write . '**/*.{ts,pug,md}' && ts-standard --fix '**/*.ts'"
  },
  "eslintIgnore": [
    "dist",
    "vendor",
    "report",
    "node_modules",
    "www/assets/js"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console"
    ],
    "absolute": true,
    "ignore": [
      "**/dist/**",
      "**/vendor/**",
      "**/report/**",
      "**/node_modules/**",
      "**/www/files/**",
      "**/*.svg"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "www"
    ],
    "ignore": [
      "dist/",
      "vendor/",
      "report/",
      "node_modules/",
      "www/files/"
    ],
    "ext": "*",
    "exec": "npm run build && bundle exec jekyll serve"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.95.0",
    "@aws-sdk/credential-providers": "^3.95.0",
    "@aws-sdk/signature-v4-crt": "^3.88.0",
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "autoprefixer": "^10.4.7",
    "chalk": "^4.1.2",
    "del": "^6.1.1",
    "fancy-log": "^2.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-flatmap": "^1.0.2",
    "gulp-header": "^2.0.9",
    "gulp-postcss": "^9.0.1",
    "gulp-pug": "^5.0.0",
    "gulp-purgecss": "^4.1.3",
    "gulp-svgmin": "^4.1.0",
    "gulp-tap": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "lodash": "^4.17.21",
    "luxon": "^2.4.0",
    "merge-stream": "^2.0.0",
    "mustache": "^4.2.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "purgecss": "^4.1.3",
    "readable-stream": "^3.6.0",
    "slugify": "^1.6.5",
    "svgo": "^2.8.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2",
    "vinyl": "^2.2.1",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@jscpd/finder": "^3.4.5",
    "@prettier/plugin-pug": "^1.20.1",
    "@types/fancy-log": "^1.3.1",
    "@types/gulp": "^4.0.9",
    "@types/gulp-babel": "^6.1.30",
    "@types/gulp-header": "^2.0.1",
    "@types/gulp-postcss": "^8.0.2",
    "@types/gulp-svgmin": "^1.2.1",
    "@types/gulp-tap": "^1.0.1",
    "@types/gulp-uglify": "^3.0.7",
    "@types/lodash": "^4.14.182",
    "@types/luxon": "^2.3.2",
    "@types/merge-stream": "^1.1.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.35",
    "@types/pug": "^2.0.6",
    "@types/readable-stream": "^2.3.13",
    "@types/vinyl": "^2.0.6",
    "husky": "^7.0.4",
    "jscpd": "^3.4.5",
    "nodemon": "^2.0.16",
    "npm-check-updates": "^12.5.12",
    "prettier": "^2.6.2",
    "ts-standard": "^11.0.0"
  }
}
