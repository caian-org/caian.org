{
  "compilerOptions": {
    "lib": ["DOM", "ES2019", "ES2020", "ES2021"],
    "target": "ES2018",
    "module": "CommonJS",
    "baseUrl": "build",
    "outDir": "_build",
    "strict": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "pretty": true
  },
  "exclude": ["node_modules", "dist", "_build"]
}
