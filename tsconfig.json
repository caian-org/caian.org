{
  "compilerOptions": {
    "lib": ["ES2019", "ES2020", "ES2021"],
    "typeRoots": ["node_modules/@types"],
    "target": "ES2018",
    "module": "CommonJS",
    "baseUrl": "misc",
    "outDir": "misc/dist",
    "strict": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "pretty": true
  },
  "exclude": ["node_modules", "dist", "misc/dist"]
}
